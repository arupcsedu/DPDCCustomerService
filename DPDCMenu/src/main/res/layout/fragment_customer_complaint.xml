<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:layout_marginTop="@dimen/activity_margin"
    android:layout_marginBottom="@dimen/activity_margin"
    android:layout_marginLeft="@dimen/activity_margin"
    android:layout_marginRight="@dimen/activity_margin">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#372c24"
            android:text="Customer Number:"
            android:id="@+id/cap_customer_no"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:paddingTop="2dp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Customer Number Text"
                android:id="@+id/customer_no"
                android:layout_below="@+id/cap_customer_no"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Customer Name:"
                android:id="@+id/cap_customer_name"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/cap_customer_no"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/customer_name"
                android:textStyle="bold"
                android:paddingTop="2dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Customer Name Text"
                android:id="@+id/customer_name"
                android:layout_below="@+id/cap_customer_no"
                android:layout_alignParentStart="true"
                android:layout_marginStart="191dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"/>

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Address:"
                android:id="@+id/cap_address"
                android:layout_below="@+id/customer_no"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/customer_name"
                android:textStyle="bold"
                android:paddingTop="2dp"
                />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="address text"
                android:id="@+id/address"
                android:layout_below="@+id/cap_address"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/cap_address"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Complaint List"
                android:id="@+id/textView"
                android:paddingTop="8dp"
                android:paddingBottom="2dp"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"/>
            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/list_customer_complaint"
                android:paddingTop="2dp"
                android:paddingBottom="2dp">


            </ListView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_empty_msg"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
