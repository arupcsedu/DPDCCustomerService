<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="12dp">
    <TextView
        android:id="@+id/txt_track_no"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="track no"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />
    <TextView
        android:id="@+id/txt_complaint_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="type"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txt_track_no"
        android:layout_toLeftOf="@+id/txt_status"
        android:layout_toStartOf="@+id/txt_status"
        android:layout_marginTop="8dp"
        android:layout_alignBottom="@+id/txt_track_no" />
    <TextView
        android:id="@+id/txt_status"
        android:layout_width="80dp"
        android:text="status"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />
</RelativeLayout>
