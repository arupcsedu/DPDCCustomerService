<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:layout_marginTop="@dimen/activity_margin"
    android:layout_marginBottom="@dimen/activity_margin"
    android:layout_marginLeft="@dimen/activity_margin"
    android:layout_marginRight="@dimen/activity_margin">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--  Customer Contact No Label -->`
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Contact Number"/>

            <EditText android:id="@+id/contact_no"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:layout_marginTop="2dp"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal" />

            <!--  Complaint Type Label -->
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Complaint Type"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="2dp"/>

            <!-- Spinner Element -->
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/complaint_category_title"
                android:layout_marginBottom="16dp"/>
            />

            <!-- Comment Label -->
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:layout_marginBottom="2dp"/>

            <EditText android:id="@+id/new_comment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="false">

                </EditText>
            <!-- Send Button -->
            <Button android:id="@+id/newBtnRegister"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="Submit"/>

        </LinearLayout>


    </RelativeLayout>
</ScrollView>
